    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Show loading screen for 2 seconds
            setTimeout(function() {
                document.getElementById('loadingScreen').style.opacity = '0';
                setTimeout(function() {
                    document.getElementById('loadingScreen').style.display = 'none';
                }, 500);
            }, 2000);

            // Initialize YouTube Downloader
            new YouTubeDownloader();
        });

        class YouTubeDownloader {
            constructor() {
                this.currentFormat = 'mp4';
                this.apiKey = 'AIzaSyB16u905w4V702Xvq81i0b2J9iX43mR85c';
                this.baseUrl = 'https://api.arabdullah.top/api';
                this.init();
            }

            init() {
                this.setupEventListeners();
                this.setupFormatSelector();
                this.setupPalestineBanner();
                this.setupAdPlaceholders();
                this.setupBackgroundEffects();
            }

            setupEventListeners() {
                const downloadBtn = document.getElementById('downloadBtn');
                const urlInput = document.getElementById('urlInput');

                downloadBtn.addEventListener('click', () => this.handleDownload());
                
                urlInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        this.handleDownload();
                    }
                });

                urlInput.addEventListener('input', () => {
                    this.hideError();
                    this.hideResult();
                });
            }

            setupFormatSelector() {
                const formatBtns = document.querySelectorAll('[data-format]');
                
                formatBtns.forEach(btn => {
                    btn.addEventListener('click', () => {
                        formatBtns.forEach(b => b.classList.remove('active'));
                        btn.classList.add('active');
                        this.currentFormat = btn.dataset.format;
                        this.hideResult();
                    });
                });
            }

            setupPalestineBanner() {
                const banner = document.getElementById('palestineBanner');
                const options = document.getElementById('donateOptions');
                
                banner.addEventListener('click', function(e) {
                    // Don't toggle if clicking on a donation link
                    if (e.target.tagName === 'A' || e.target.parentElement.tagName === 'A') {
                        return;
                    }
                    
                    if (options.style.display === 'block') {
                        options.style.display = 'none';
                    } else {
                        options.style.display = 'block';
                    }
                });
            }

            setupAdPlaceholders() {
                const adPlaceholders = document.querySelectorAll('.ad-placeholder');
                
                adPlaceholders.forEach(ad => {
                    ad.addEventListener('click', function() {
                        window.location.href = 'https://wa.me/94723921910';
                    });
                });
            }

            setupBackgroundEffects() {
                // Make floating shapes move with mouse
                document.addEventListener('mousemove', (e) => {
                    const shapes = document.querySelectorAll('.shape');
                    const x = e.clientX / window.innerWidth;
                    const y = e.clientY / window.innerHeight;
                    
                    shapes.forEach((shape, index) => {
                        const speed = (index + 1) * 0.02;
                        shape.style.transform = `translate(${x * 20 * speed}px, ${y * 20 * speed}px)`;
                    });
                });
            }

            async handleDownload() {
                const url = document.getElementById('urlInput').value.trim();
                
                if (!url) {
                    this.showError('Please enter a YouTube URL');
                    return;
                }

                if (!this.isValidYouTubeUrl(url)) {
                    this.showError('Please enter a valid YouTube URL');
                    return;
                }

                this.showLoader();
                this.hideError();
                this.hideResult();

                try {
                    const data = await this.fetchVideoData(url);
                    this.displayResult(data);
                } catch (error) {
                    console.error('Download error:', error);
                    this.showError('Failed to fetch video data. Please try again.');
                } finally {
                    this.hideLoader();
                }
            }

            isValidYouTubeUrl(url) {
                const youtubeRegex = /^(https?:\/\/)?(www\.)?(youtube\.com\/(watch\?v=|shorts\/)|youtu\.be\/)[\w-]+(\S+)?$/;
                return youtubeRegex.test(url);
            }

            async fetchVideoData(url) {
                const endpoint = this.currentFormat === 'mp4' ? 'ytmp4' : 'ytmp3';
                const apiUrl = `${this.baseUrl}/${endpoint}?url=${encodeURIComponent(url)}&apiKey=${this.apiKey}`;
                
                const response = await fetch(apiUrl);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                return await response.json();
            }

            displayResult(data) {
                const videoInfo = document.getElementById('videoInfo');
                const downloadOptions = document.getElementById('downloadOptions');

                // Display video info
                videoInfo.innerHTML = `
                    <img src="${data.thumbnail}" alt="Video thumbnail" class="thumbnail">
                    <div class="video-details">
                        <h3>${this.escapeHtml(data.title)}</h3>
                        <div class="video-meta">Duration: ${data.duration}</div>
                    </div>
                `;

                // Display download options
                downloadOptions.innerHTML = '';
                
                const formats = data.availableFormats || [];
                
                formats.forEach(format => {
                    const downloadItem = document.createElement('div');
                    downloadItem.className = 'download-item';
                    
                    const iconClass = this.currentFormat === 'mp4' ? 'fas fa-video' : 'fas fa-music';
                    const quality = this.currentFormat === 'mp4' 
                        ? (format.resolution || format.format)
                        : `${format.bitrate || 'Unknown'}kbps`;
                    
                    downloadItem.innerHTML = `
                        <div class="download-info">
                            <i class="${iconClass} download-icon"></i>
                            <div class="download-details">
                                <div class="download-quality">${quality}</div>
                                <div class="download-size">${format.size || 'Unknown size'}</div>
                            </div>
                        </div>
                        <a href="${format.url}" 
                           target="_blank" 
                           download="${data.title}.${this.currentFormat}"
                           class="download-btn">
                            <i class="fas fa-download"></i>
                            Download
                        </a>
                    `;
                    
                    downloadOptions.appendChild(downloadItem);
                });

                document.getElementById('resultSection').style.display = 'block';
            }

            showLoader() {
                const loader = document.getElementById('loader');
                const downloadBtn = document.getElementById('downloadBtn');
                
                loader.style.display = 'block';
                downloadBtn.disabled = true;
                downloadBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            }

            hideLoader() {
                const loader = document.getElementById('loader');
                const downloadBtn = document.getElementById('downloadBtn');
                
                loader.style.display = 'none';
                downloadBtn.disabled = false;
                downloadBtn.innerHTML = '<i class="fas fa-download"></i> Get Download Options';
            }

            showError(message) {
                const errorElement = document.getElementById('errorMessage');
                errorElement.textContent = message;
                errorElement.style.display = 'block';
            }

            hideError() {
                const errorElement = document.getElementById('errorMessage');
                errorElement.style.display = 'none';
            }

            hideResult() {
                const resultSection = document.getElementById('resultSection');
                resultSection.style.display = 'none';
            }

            escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }
        }
    </script>
</body>
</html>